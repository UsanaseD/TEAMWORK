{
  "swagger": "2.0",
  "info": {
    "description": "Teamwork is an ​internal social network for organizations’ employees. The goal of this application is to facilitate more interaction between colleagues and facilitate team bonding. ",
    "version": "1",
    "title": "TEAMWORK"
  },
  "host": "usanase-TEAMWORK.herokuapp.com",
  "basePath": "/api/v1/",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "User SignUp",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User creation"
          }
        ],
        "responses": {
          "201": {
            "description": "User account created!"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "User Login",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "user login"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful!"
          }
        }
      }
    },

    "/article": {
      "post": {
        "tags": [
          "article"
        ],
        "summary": "article Creation",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "client token",
            "required": true
          },
          {
            "name": "create an article",
            "in": "body",
            "description": "enter article definition"
          }
        ],
        "responses": {
          "200": {
            "description": "Article created!"
          }
        }
      },
       "get": {
        "tags": [
          "Article"
        ],
        "summary": "Get all articles",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "client token",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "articles retrieved Successfully!"
          }
        }
      }
      },

 "/article/{id}": {   
"get":{
        "tags":[
            "article"
        ],
        "summary":"get specific article",
        "produces":[
            "application/json"
        ],

            "parameters": [
        {
          "name": "Authorization",
          "in": "header",
          "type": "string",
          "description": "client token",
          "required": true
        },
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "integer",
          "description": "article id"
        }
      ],
      "responses": {
        "200": {
          "description": "Success!"
        }
      }
    },

    "delete":{
          "tags":[
              "article"
          ],
          "summary":"delete a specific article",
          "produces":[
              "application/json"
          ],

              "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "Admin token",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "article id"
          }
        ],
        "responses": {
          "200": {
            "description": "article deleted!"
          }
        }
    },

    "patch":{
      "tags":[
          "article"
      ],
      "summary":"update a specific article",
      "produces":[
          "application/json"
      ],

          "parameters": [
      {
        "name": "Authorization",
        "in": "header",
        "type": "string",
        "description": "client token",
        "required": true
      },
      {
        "name": "id",
        "in": "path",
        "required": true,
        "type": "integer",
        "description": "article id"
      },
      {
        "name": "update article",
        "in": "body",
        "required": true,
        "description": "article body"
      }
    ],
    "responses": {
      "200": {
        "description": "article updated!"
      },
      "404": {
        "description": "No element found!"
      }
    }
  }
},
  
    "/comment": {
      "post": {
        "tags": [
          "comment"
        ],
        "summary": "create a comment.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "Client token",
            "required": true
          },
          {
            "name": "comment",
            "in": "body",
            "description": "comment creation"
          }
        ],
        "responses": {
          "200": {
            "description": "comment created successfully!"
          }
        }
      }
    },
    
    "/articleflag": {
      "post": {
        "tags": [
          "articleflag"
        ],
        "summary": "flag a posted article.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "Client token",
            "required": true
          },
          {
            "name": "articleflag",
            "in": "body",
            "description": "report or flag a posted article"
          }
        ],
        "responses": {
          "200": {
            "description": "article flaged successfully!"
          }
        }
      }
    },
    "/commentflag": {
      "post": {
        "tags": [
          "commentflag"
        ],
        "summary": "flag a posted comment.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "description": "Client token",
            "required": true
          },
          {
            "name": "articleflag",
            "in": "body",
            "description": "report or flag a posted comment"
          }
        ],
        "responses": {
          "200": {
            "description": "comment flaged successfully!"
          }
        }
      }
    },

  "/reparticle":{
    "get": {
      "tags": [
        "reportedArticle"
      ],
      "summary": "Get all reported articles",
      "parameters": [
        {
          "name": "Authorization",
          "in": "header",
          "type": "string",
          "description": "client token",
          "required": true
        }
      ],
      "responses": {
        "200": {
          "description": "reported articles retrieved Successfully!"
        }
      }
    }
  },


  "definitions": {
    "signup": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        },
        "address":{
          "type":"string"
        },
        "gender":{
          "type":"string"
        },
        "jobtitle":{

          "type":"string"
        },
        "depart":{
          "type":"string"
        },

        "admin":{
          "type":"boolean"
        },         
        "password": {
          "type": "string"
        }
      }
    },

    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },

    "article":{
      "type":"object",
      "properties":{
        "auth_id":{
          "type":"string"
        },
          "author":{
              "type":"string"
          },
          "category":{
              "type":"string"
          },
          "title":{
              "type":"string"
          },
          "body":{
              "type":"string"
          }
      }
  },

  "comment":{
      "type":"object",
      "properties":{
          "article_id":{
              "type":"integer"
          },
          "auth_id":{
              "type":"string"
          },
          "comment":{
              "type":"string"
          } 
      }
  },
    "articleflag": {
      "type": "object",
      "properties": {
        "article_id": {
          "type": "integer"
        },
        "reason": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }

      }
    },
    "commentflag": {
      "type": "object",
      "properties": {
        "comment_id": {
          "type": "integer"
        },
        "reason": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }

      }
    }
}
}

}